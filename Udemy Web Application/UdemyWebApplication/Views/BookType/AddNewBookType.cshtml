@model BookType

<form method="post">

    <div class="border p-3 mt-5">
        <div class="row pb-3 "><h2 class="text-primary">Add New Book Type</h2><hr /></div>
        <div class="mb-3">
            <label asp-for="Name" class=" p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Add Book Type</button>
    <a asp-controller="BookType" asp-action="Index" class="btn btn-lg btn-primary" style="width:200px">Book Types</a>

</form>