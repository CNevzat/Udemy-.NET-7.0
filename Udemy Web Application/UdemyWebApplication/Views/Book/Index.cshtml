@model List<Book>
@if(TempData["successful"] != null)
{
    <h2 style="color:red">@TempData["successful"]</h2>
}

    <div class="container">
    <div class="row pt-3 pb-4">
        <div>
<h1>Kitaplar</h1>
        </div>
    </div>
<table class="table table-bordered">
    <thead>
        <tr>
                <th>ID</th>
                <th>Book Name</th>
                <th>Book Description</th>
                <th>Writer</th>
                <th>Price (TL)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                    <td>@book.ID</td>
                    <td>@book.BookName</td>
                    <td>@book.Description</td>
                    <td>@book.Writer</td>
                    <td>@book.Price</td>
                    <td>
                        <a asp-controller="Book" asp-action="UpdateBook" asp-route-id="@book.ID" type="button" class="btn btn-success" style="width:100px">Update</a>
                        <a asp-controller="Book" asp-action="DeleteBook" asp-route-id="@book.ID" type="button" class="btn btn-danger" style="width:100px">Delete</a>
                </td>
            </tr>
        }  
    </tbody>
</table>
<div class="row pt-3 pb-2">
    <div>
       <a asp-controller="Book" asp-action="AddNewBook" class="btn btn-lg btn-primary" type="button">Create New Book </a>
    </div>
</div>
</div>