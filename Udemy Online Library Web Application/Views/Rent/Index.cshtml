@model List<Rent>
@if(TempData["successful"] != null)
{
    <h2 style="color:red">@TempData["successful"]</h2>
}

    <div class="container">
    <div class="row pt-3 pb-4">
        <div>
<h1>Rents</h1>
        </div>
    </div>
<table class="table table-bordered">
    <thead>
        <tr>
                <th>Rent ID</th>
                <th>Student ID</th>
                <th>Book Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var rent in Model)
        {
            <tr>
                    <td>@rent.BookID</td>
                    <td>@rent.StudentID</td>
                    <td>@rent.Book.BookName</td>
                    <td>
                        <a asp-controller="Rent" asp-action="AddUpdateRent" asp-route-id="@rent.ID" type="button" class="btn btn-success" style="width:100px">Update</a>
                    </td>
                    <td>
                        <a asp-controller="Rent" asp-action="DeleteRent" asp-route-id="@rent.ID" type="button" class="btn btn-danger" style="width:100px">Delete</a>
                    </td>
                       
                   
            </tr>
        }  
    </tbody>
</table>
<div class="row pt-3 pb-2">
    <div>
            <a asp-controller="Rent" asp-action="AddUpdateRent" class="btn btn-lg btn-primary" type="button">New Rent </a>
    </div>
</div>
</div>