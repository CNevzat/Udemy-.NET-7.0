@model List<BookType>
@if(TempData["successful"] != null)
{
    <h2 style="color:red">@TempData["successful"]</h2>
}

    <div class="container">
    <div class="row pt-3 pb-4">
        <div>
<h1>Kitap Türleri</h1>
        </div>
    </div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Book Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var bookType in Model)
        {
            <tr>
                <td>@bookType.ID</td>
                <td>@bookType.Name</td>
                    <td>
                        <a asp-controller="BookType" asp-action="UpdateBookType" asp-route-id="@bookType.ID" type="button" class="btn btn-success" style="width:200px">Update</a>
                        <a asp-controller="BookType" asp-action="DeleteBookType" asp-route-id="@bookType.ID" type="button" class="btn btn-danger" style="width:200px">Delete</a>
                </td>
            </tr>
        }  
    </tbody>
</table>
<div class="row pt-3 pb-2">
    <div>
       <a asp-controller="BookType" asp-action="AddNewBookType" class="btn btn-lg btn-primary" type="button">Create New Book Type </a>
    </div>
</div>
</div>