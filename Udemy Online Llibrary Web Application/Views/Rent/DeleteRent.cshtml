@model Rent

<form method="post">
    <input asp-for="ID" hidden />
    <div class="border p-3 mt-5">
        <div class="row pb-3 "><h2 class="text-primary">Delete Rent</h2><hr /></div>
        <div class="mb-3">
            <label asp-for="StudentID" class=" p-0"></label>
            <input asp-for="StudentID" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="BookID" class=" p-0"></label>
            <select asp-for="BookID" asp-items="ViewBag.BookList" disabled class="form-select"> </select>
        </div>
    </div>
    <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Delete</button>
    <a asp-controller="Rent" asp-action="Index" class="btn btn-lg btn-primary" style="width:200px">Rents</a>

</form>